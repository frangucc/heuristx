<%= javascript_tag do -%>
$(document).ready(function(){
  var rand = $('.slideshow-five > div').length;
  $('.slideshow-five').cycle({
    pager: '#home_slide_nav5',
    cleartype: 1,
    timeout:0,
    startingSlide: Math.floor(Math.random() * rand),
    fx: 'none'
  });
  $("#connect_and_exchange_wrapper").css({opacity: 0, visibility: "visible"});
  var html = $(".hidden-media-widget").html();
  $(".hidden-media-widget").remove();
  $("#connect_and_exchange_wrapper").html(html);
  $("#connect_and_exchange_wrapper").css({opacity: 0, visibility: "visible"}).animate({opacity: 1}, 1000);
  
  $(".mast-text").hide();
  $(".mast-text").slideDown("slow");
});

function loadVideo1() {
  jQuery.facebox('<iframe src="http://player.vimeo.com/video/8069409?portrait=0" width="650" height="440" frameborder="0"></iframe><br><br>');
  $(".fb-content").trigger("update");
}
function loadVideo2() {
  jQuery.facebox('<iframe src="http://player.vimeo.com/video/8126895?portrait=0" width="650" height="440" frameborder="0"></iframe><br><br>');
  $(".fb-content").trigger("update");
}
<% end -%>

